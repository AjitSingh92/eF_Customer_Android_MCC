<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_gradient"
    tools:context=".search_post_code.SearchPostCodeActivity">
    <Button
        android:id="@+id/btn_search_cancel"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/ic_close_black_24dp"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:layout_gravity="start|left"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white"
        android:text="" />
    <ImageView
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@mipmap/easy_food_logo"
        android:padding="@dimen/_25sdp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="@font/avenir_black"
        android:text="Find local restaurant deals"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"

        android:layout_marginTop="@dimen/_10sdp"
        android:background="@mipmap/grey_category_copy"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">
        <EditText
            android:id="@+id/search_post_et"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:ems="10"
            android:fontFamily="@font/avenir_medium"
            android:inputType="textCapCharacters"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:hint="Search by postcode"
            android:text="B13 9PG"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"

            android:background="@drawable/bg_edit_two"
            android:textColor="@color/gray"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/searchicon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:background="@drawable/ic_location_searching_black_24dp"


            />

        <ImageView
            android:id="@+id/search"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/ic_search_black_24dp"


            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/btn_intro_bg"
        android:textAllCaps="false"
        android:textSize="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:textColor="@color/white"
        android:text="Search" />


</LinearLayout>