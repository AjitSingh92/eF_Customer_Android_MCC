<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/seme_transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_25sdp"
            android:background="@drawable/cardview"
            android:orientation="vertical">

            <!-- TODO: Update blank fragment layout -->


            <ImageView
                android:id="@+id/cross_tv"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="right"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/circle_gray"
                android:padding="@dimen/_10sdp"
                android:src="@mipmap/x_copy"
                android:visibility="gone"

                />


            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"

                android:adjustViewBounds="true"
                android:background="@drawable/img_cheers" />

            <TextView
                android:id="@+id/tv_sorry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fm"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/avenir_roman"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/sorry_we_don_t_currently_deliver_in_your_area"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_16sdp" />


            <TextView
                android:id="@+id/tv_expand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:autoText="true"
                android:fontFamily="@font/avenir_roman"
                android:gravity="center"
                android:text="@string/we_are_expanding_fast"
                android:textColor="@color/descolor"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_close"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/fm"
                    android:background="@drawable/rounded_orange"
                    android:fontFamily="@font/avenir_black"
                    android:gravity="center"
                    android:text="@string/close"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</layout>