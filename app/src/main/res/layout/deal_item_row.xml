<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_145sdp"
    android:layout_height="@dimen/_140sdp"
    android:background="@drawable/shadow_white"
    android:layout_marginLeft="@dimen/_10sdp"
    android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dealNameId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_black"
                android:gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Meal Deal 1"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/txt_offer_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_medium"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:text="1 Any 2 x 10” Pizzas 2 Chips 2 Drinks 3 pcs Garlic Bread"
                android:textColor="@color/descolor"
                android:textSize="@dimen/_9sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                >

                <LinearLayout
                    android:id="@+id/LLiD"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/item_orange_color_gray"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="25dp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_below="@+id/fm"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:fontFamily="@font/avenir_black"
                        android:gravity="center"

                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />


                </LinearLayout>
                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/llid_3"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir_black"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="£11.99"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />
                <ImageView
                    android:id="@+id/cross_tv"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/circle_gray"
                    android:padding="@dimen/_6sdp"

                    android:visibility="gone"
                    android:src="@drawable/ic_close_black_24dp"

                    />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>