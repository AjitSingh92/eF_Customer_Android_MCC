<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_black"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:text="John Smith"
        android:textColor="@color/descolor"
        android:textSize="@dimen/_14sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"

        >

        <ImageView
            android:id="@+id/rat_1"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:visibility="invisible"
            android:background="@drawable/rating_star"
            android:padding="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/rat_2"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toRightOf="@+id/rat_1"
            android:visibility="invisible"
            android:background="@drawable/rating_star"
            android:padding="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/rat_3"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toRightOf="@+id/rat_2"
            android:visibility="invisible"
            android:background="@drawable/rating_star"
            android:padding="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/rat_4"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toRightOf="@+id/rat_3"
            android:visibility="invisible"
            android:background="@drawable/rating_star"
            android:padding="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/rat_5"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/rat_4"
            android:background="@drawable/rating_star"
            android:padding="@dimen/_10sdp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="@font/avenir_medium"
            android:text="12/02/2019"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />


    </RelativeLayout>


</LinearLayout>