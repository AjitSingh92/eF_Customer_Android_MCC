<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_143sdp"
    android:background="@drawable/shadow_yellow"
    android:layout_marginLeft="@dimen/_5sdp"
    android:orientation="vertical">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


            <ImageView
                android:id="@+id/image_menu_logo"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:src="@drawable/profile"
                />

        <Button
            android:id="@+id/btn_see_full_menu"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/btn_intro_bg"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/avenir_medium"
            android:textAllCaps="false"
            android:text="See full menu" />

    </LinearLayout>

</LinearLayout>